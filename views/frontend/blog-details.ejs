<%- include('partials/header') %>

  <main id="main">
    <section class="birthStory__mainBanner sm-banner">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="innerPage__contents" data-aos="fade-up">
              <h1><%= blog.title %></h1>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- ======= Blogs Section ======= -->
    <section class="birthStory__blogs sectionPad pt-3 sm-pb-0">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="blog__img blog__details" data-aos="fade-up">
              <img src="/<%= blog.image %>" alt="" />
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="blog__details sectionPad pt-3">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <p><%= blog.short_description %></p>
            <div><%- blog.description %></div>
          </div>
        </div>
      </div>
    </section>

    <!-- ======= More Blogs Section ======= -->
    <section class="birthStory__blogs sectionPad bg-white">
      <div class="container">
        <h2 class="pb-4">More posts</h2>
        <div class="row">
          <% if (blogs && blogs.length> 0) { %>
            <% blogs.forEach((blog, index)=> { %>
              <div class="col-md-4 blog-item <% if (index >= 3) { %> hidden-blog <% } %>">
                <a href="/blog/<%= blog._id %>">
                <div class="blogLists" data-aos="fade-up">
                  <img src="/<%= blog.image %>" alt="<%= blog.title %>" />
                  <div class="blog__title">
                      <h2>
                        <%= blog.title %>
                      </h2>
                    <h6>
                      <%= blog.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %> | <span>
                          <%= blog.author %>
                        </span>
                    </h6>
                  </div>
                </div>
                </a>
              </div>
              <% }); %>
                <% } else { %>
                  <p>No blogs found.</p>
                  <% } %>
        </div>
      </div>
    </section>




    <%- include('partials/appointment') %>
    <%- include('partials/footer') %>